<h3>Todo List</h3>

<div class="location-message message"></div>
<div class="input-group place">
  <input type="text" class="form-control user-place" name="place" value={{user.place}} placeholder="Set your location"/>
  <div class="input-group-btn">
    <button class="place-update btn btn-success">Update</button>
  </div>
</div>

<br/>
<button type="button" class="btn btn-default" data-toggle="modal" data-target="#addModal">
    <span class="glyphicon glyphicon-plus"></span>Add
</button>

<div class="todos">
    <ul class="list-group">
    {{#each todos}}
        <li class="list-group-item">{{this.content}} - {{this.due_time}} - {{this.stat}}</li>
    {{/each}}
    </ul>
</div>

<div class="modal fade" id="addModal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add todo</h4>
      </div>
      <form name="todoForm" method="post">
          <div class="modal-body">
            <!-- Todo form -->
                <div class="todo-add message"></div>
                <div class="form-group">
                    <label for="todoContent">Todo content</label>
                    <input type="text" class="form-control" id="todo-content" name="content" placeholder="Add a todo"/>
                </div>
                <div class="form-group">
                    <label for="datetimepicker">Due time</label>
                    <input type="text" class="form-control" id="datetimepicker" placeholder="Due time" data-date-format="yyyy-mm-dd hh:ii">
                </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Add</button>
          </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->